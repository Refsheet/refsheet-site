files:
  "/etc/nginx/conf.d/cors.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      add_header 'Access-Control-Allow-Origin' '*';
      add_header 'Access-Control-Allow-Credentials' 'true';
      add_header 'Access-Control-Allow-Methods' 'GET, HEAD, OPTIONS';

container_commands:
  01restart_nginx:
    command: "service nginx restart"
