{
  "swagger": "2.0",
  "info": {
    "title": "Refsheet.net API",
    "description": "The Refsheet.net API allows another application to view and manipulate data on behalf of a user. To get started,\n[generate an API Key from your account settings](https://refsheet.net/account/settings/api).\n",
    "version": "v1"
  },
  "host": "http://dev1.refsheet.net",
  "basePath": "/api/v1",
  "paths": {
    "/users/{id}": {
      "get": {
        "summary": "Retrieves a User",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "description": "User GUID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "user found",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "attributes": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "username": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "username"
                      ]
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              }
            },
            "examples": {
              "application/json": {
                "data": {
                  "id": "2a78263ed9730bb8",
                  "type": "users",
                  "attributes": {
                    "username": "user1",
                    "avatar_url": "https://secure.gravatar.com/avatar/111d68d06e2d317b5a59c2c6c5bad808?default=identicon&secure=true",
                    "name": "Nicky Corkery II",
                    "profile_image_url": "https://secure.gravatar.com/avatar/111d68d06e2d317b5a59c2c6c5bad808?default=identicon&secure=true&size=200",
                    "profile": "Assumenda debitis impedit. Fuga repellat quo. Nesciunt culpa ipsam.",
                    "characters_count": 0,
                    "is_admin": false,
                    "is_patron": false,
                    "is_supporter": false,
                    "is_moderator": false
                  },
                  "links": {
                    "self": "http://dev1.refsheet.net:5000/api/v1/users/user1",
                    "public": "http://dev1.refsheet.net:5000/users/user1"
                  }
                },
                "jsonapi": {
                  "version": "1.0"
                }
              }
            }
          },
          "404": {
            "description": "user not found",
            "examples": {
              "application/json": {
                "error": "Couldn't find User"
              }
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "apiKeyId": {
      "type": "apiKey",
      "name": "X-ApiKeyId",
      "in": "header"
    },
    "apiKeySecret": {
      "type": "apiKey",
      "name": "X-ApiKeySecret",
      "in": "header"
    }
  },
  "security": [
    {
      "apiKeyId": [

      ],
      "apiKeySecret": [

      ]
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json",
    "application/vnd.api+json"
  ],
  "produces": [
    "application/vnd.api+json"
  ]
}